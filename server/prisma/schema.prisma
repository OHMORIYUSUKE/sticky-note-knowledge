// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// table

model Todo {
  id  String @unique
  text String
  done Boolean
}

model stickyNote {
  id String @unique
  text String
  color String
  userId String 
  yCoordinates Int
  xCoordinates Int
  createdAt DateTime @default(now())
}


model user {
  id String @unique
  name String
  createdAt DateTime @default(now())
}

model book {
  id String @unique
  title String
  text String
  createdAt DateTime @default(now())
}